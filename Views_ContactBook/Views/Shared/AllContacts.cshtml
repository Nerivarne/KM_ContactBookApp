@using ContactBook.ViewModels
@model ContactViewModel
<!DOCTYPE html>
<html>
<head>
	<title>My contacts</title>
</head>
<style>
	table, th, td {
		border: 1px solid black;
		text-align: center;
	}
</style>
<body>
	<a href="edit-user">Edit user >></a>
	<br />
	<a href="logout">Logout >></a>
	<h1>My contacts</h1>
	<br>
	<table>
		<thead>
			<tr>
				<th>First name</th>
				<th>Last name</th>
				<th>Telephone number</th>
				<th>Email</th>
				<th>Address</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var contact in @Model.ListOfContacts)
			{
				<tr>
					<td>@contact.FirstName</td>
					<td>@contact.LastName</td>
					<td>@contact.TelephoneNumber</td>
					<td>@contact.Email</td>
					<td>@contact.Address</td>
					<td>
						<form action="edit">
							<input type="hidden" value="@contact.Id" name="contactId" />
							<input type="submit" value="edit">
						</form>

					</td>
					<td>
					<form action="delete">
							<input type="hidden" value="@contact.Id" name="contactId" />
							<input type="submit" value="delete">
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<form action="add" method="post">
		<label for="firstName">First name:</label>
		<input type="text" name="firstName" /><br>
		<label for="lastName">Last name:</label>
		<input type="text" name="lastName" /><br>
		<label for="telephoneNumber">Telephone number:</label>
		<input type="number" name="telephoneNumber" /><br>
		<label for="email">Email:</label>
		<input type="text" name="email" /><br>
		<label for="address">Address:</label>
		<input type="text" name="address" /><br>
		<input type="submit" value="Add" />
	</form>
</body>
</html>
